import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
                    Scanner scanner = new Scanner(System.in);
                    int numero;
                    // Solicita un numero valido (mayor que 1)
                    do {
                        System.out.print("Introduce un num mayor que 1: ");
                        numero = scanner.nextInt();

                        if (numero <= 1) {
                            System.out.println("el num debe ser mayor que 1");
                        }
                    } while (numero <= 1);
                    // Calcula suma entre los numeros
                    int suma = 0;
                    for (int i = 1; i <= numero; i++) {
                        suma += i;
                    }

                    System.out.println("La suma desde 1 hasta " + numero + " es: " + suma);
                }
            }
